<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:padding="10dp">
    <ImageView
        android:id="@+id/detail_movie_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingRight="10dp"/>
    <TextView
        android:id = "@+id/title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@+id/detail_movie_image"
        android:layout_toLeftOf="@+id/favorite_button"
        android:textSize="25sp"/>
    <TextView
        android:id = "@+id/release_date"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/detail_movie_image"/>
    <TextView
        android:id = "@+id/user_rating"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_below="@+id/release_date"
        android:layout_toRightOf="@id/detail_movie_image"/>
    <ImageButton
        android:id="@+id/favorite_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/star"
        android:background="#00ffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onToggleStar"/>
    <TextView
        android:id = "@+id/overview"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/detail_movie_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <View
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="2.dp"
        android:background="#CCCCCC"
        android:layout_below="@+id/overview"/>
    <TextView
        android:id="@+id/trailers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Trailers"
        android:layout_below="@+id/line"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView1"
        android:layout_below="@+id/trailers">
        <ListView
            android:id="@+id/listview_trailers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>
    <TextView
        android:id="@+id/error_message_trailer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="An error has occurred. Please try again."
        android:layout_below="@+id/trailers"
        android:textSize="20sp"
        android:visibility="invisible"/>
    <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#CCCCCC"
        android:layout_below="@+id/scrollView1"/>
    <TextView
        android:id="@+id/reviews"
        android:layout_below="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Reviews"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/reviews">
        <ListView
            android:id="@+id/listview_reviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>
    <TextView
        android:id="@+id/error_message_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="An error has occurred. Please try again."
        android:layout_below="@+id/reviews"
        android:textSize="20sp"
        android:visibility="invisible" />
</RelativeLayout>